<%= stylesheet_link_tag 'posts.css' %>


<div class="box-content">
  <div class="box-person">
    <div class="img-person"></div>
    <p>Giovanny dos Santos Cordeiro</p>
    <p>lorem ipsum dolom</p>
    <%= link_to "Novo post", new_post_path %>
  </div>
  
  <div class="container-articles">
    <% @all_posts.each do |post| %>  
      <div class="article">
        <h2>
          <%= post.title %>
        </h2>
        <span>
          <%= post.created_at.strftime("%d") %>/<%= post.created_at.strftime("%m") %>/<%= post.created_at.strftime("%Y") %>
        </span>
        <div class="buttons">
          <%= link_to "Detalhes post", post_path(post) %>
          <%= link_to "Edit post", edit_post_path(post) %>
          <%= link_to "Deletar", post_path(post), data: { 'turbo-method': :delete, 'turbo-confirm': true} %>
        </div>
      </div>
    <% end %>
    

  </div>
</div>